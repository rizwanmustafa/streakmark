{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src"
  ]
}